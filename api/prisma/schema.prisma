// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
    id Int @id @default(autoincrement())
    provider String
    providerId String
    email String @unique
    firstName String
    lastName String
    picture String?
    accessToken String?
    refreshToken String?
}

model Pole {
    id String @id
    name String
    address String
    type String
    maxPower Float
    connectorCount Int
    inUse Int
}
